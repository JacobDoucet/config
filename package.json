{
  "name": "@bedrockio/config",
  "version": "1.0.1",
  "description": "Configurations for node",
  "keywords": [
    "config",
    "env",
    "environment",
    "configuration",
    "env variables"
  ],
  "main": "./lib/index.js",
  "typings": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bedrockio/config"
  },
  "author": "Kaare Larsen",
  "license": "MIT",
  "engines": {
    "node": ">=10.*"
  },
  "scripts": {
    "cleanup": "rm -rf lib && rm -rf types",
    "prebuild": "npm run cleanup",
    "build": "tsc",
    "test": "jest",
    "prerelease": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.*",
    "@types/prettier": "2.0.1",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "ts-jest": "26.1.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)"
    ]
  }
}
