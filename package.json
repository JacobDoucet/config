{
  "name": "@bedrockio/config",
  "version": "2.2.1",
  "description": "Configurations for node",
  "keywords": [
    "config",
    "env",
    "environment",
    "configuration",
    "env variables"
  ],
  "main": "./lib/index.js",
  "typings": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bedrockio/config"
  },
  "author": "Kaare Larsen",
  "license": "MIT",
  "engines": {
    "node": ">=10.*"
  },
  "scripts": {
    "cleanup": "rm -rf lib && rm -rf types",
    "prebuild": "npm run cleanup",
    "build": "tsc",
    "test": "npm run build && jest",
    "prerelease": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.11.0",
    "jest": "^26.6.3",
    "prettier": "2.0.5",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "<rootDir>/lib/**/__tests__/**/*.js"
    ]
  }
}
